@model Groco.Models.RentContact

<div class="modal fade" id="RentContact" tabindex="-1" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="row d-flex justify-content-center align-items-center h-100 modal-body" style="border-radius: 1rem">
                <div class="row g-0">
                    <div>
                        <button type="button" class="btn-close float-end" data-bs-dismiss="modal" id="RentContactClose" aria-label="Close"></button>
                    </div>
                    <div class="col-md-4 col-lg-4 d-none d-md-block">
                        <img src="~/img/main2.png" alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; margin-left:8px; padding-right:6px;" />
                    </div>
                    <div class="col-md-8 col-lg-8 d-flex align-items-center">
                        <div class="card-body p-4 p-lg-5 text-black">
                            <form asp-action="RentContactSet" asp-controller="Home" class="forgotForm">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="d-flex align-items-center mb-3 pb-1">
                                    <i class="fa fa-motorcycle fa-2x me-3" style="color: #ff6219;"></i>
                                    <span class="h1 fw-bold mb-0">RideGo</span>
                                </div>

                                <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Rent Now</h5>

                                <div class="form-outline mb-4">
                                    <label asp-for="Email" class="form-label" style="float:left; font-size:15px;">Email</label>
                                    <input asp-for="Email" type="email" id="Email" class="form-control form-control-lg" placeholder="Enter Email" style="border: 1px solid black; border-radius:2px;" />
                                    <span asp-validation-for="Email" class="text-danger" id="Email-validation-message"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label asp-for="Place" class="form-label" style="float:left; font-size:15px;">Place</label>
                                    <input asp-for="Place" type="text" placeholder="Enter Location" class="form-control form-control-lg" id="place" style="border: 1px solid black; border-radius:2px;" />
                                    <span asp-validation-for="Place" class="text-danger" id="Place-validation-message"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label asp-for="Name" class="form-label" style="float:left; font-size:15px;">Enter Name</label>
                                    <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter Your Name" style="border: 1px solid black;" id="Name" type="text" />
                                    <span asp-validation-for="Name" class="text-danger" id="Name-validation-message"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label asp-for="Mobile" class="form-label" style="float:left; font-size:15px;">Mobile No.</label>
                                    <input asp-for="Mobile" class="form-control form-control-lg" placeholder="Enter Mobile No." style="border: 1px solid black;" id="Mobile" type="tel" />
                                    <span asp-validation-for="Mobile" class="text-danger" id="Mobile-validation-message"></span>
                                </div>

                                <div class="pt-1 mb-4">
                                    <button type="submit" class="btn btn-dark btn-lg btn-block">Register</button>
                                </div>

                                <a href="#!" class="small text-muted">Terms of use.</a>
                                <a href="#!" class="small text-muted">Privacy policy</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
